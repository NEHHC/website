{
  "name": "usds-website-v2",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "axe": "node config/run-axe.js",
    "build": "gulp build && bundle exec jekyll build",
    "build-css": "gulp sass",
    "build-fonts": "gulp fonts",
    "build-img": "gulp images",
    "build-js": "gulp javascript",
    "check-contrast": "node ./utils/check-contrast.js",
    "clean": "gulp clean-assets",
    "crawl": "node config/crawl.js",
    "postinstall": "bundle",
    "lint": "gulp eslint scss-lint",
    "prestart": "gulp build",
    "serve": "bundle exec jekyll serve --baseurl '' --drafts --future --incremental --livereload",
    "start": "bundle exec jekyll serve --baseurl ''",
    "test": "npm run axe && npm run crawl && bundle exec rspec && npm run lint",
    "watch": "NODE_ENV=development nswatch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usds/website-v2.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/usds/website-v2/issues"
  },
  "homepage": "https://github.com/usds/website-v2#readme",
  "dependencies": {
    "jquery": "^3.3.1",
    "normalize.css": "^8.0.0",
    "uswds": "github:uswds/uswds#release-2.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.3",
    "axe-core": "^2.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "browserify": "^16.2.2",
    "chalk": "^2.4.1",
    "cheerio": "^1.0.0-rc.2",
    "chroma-js": "^1.3.7",
    "chrome-launcher": "^0.10.2",
    "chrome-remote-interface": "^0.25.6",
    "colors": "^1.3.2",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.0",
    "del": "^3.0.0",
    "eslint": "^5.5.0",
    "express": "^4.16.2",
    "gulp": "^4.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-combine-mq": "^0.4.0",
    "gulp-concat": "^2.6.0",
    "gulp-eslint": "^4.0.2",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.3.0",
    "gulp-sass": "^4.0.1",
    "gulp-scss-lint": "^0.6.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-strip-css-comments": "^2.0.0",
    "gulp-uglify": "^3.0.0",
    "gulp-util": "^3.0.7",
    "json-format": "^1.0.1",
    "merge-stream": "^1.0.0",
    "minimist": "^1.2.0",
    "node-notifier": "^5.2.1",
    "nswatch": "^0.2.0",
    "simplecrawler": "^1.1.6",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "yamljs": "^0.3.0"
  },
  "watch": {
    "./css/**/*.scss": [
      "build-css"
    ],
    "./img": [
      "build-img"
    ],
    "./js/**/*.js": [
      "build-js"
    ],
    "./node_modules/uswds/src/stylesheets": [
      "build-css"
    ],
    "./node_modules/uswds/src/fonts": [
      "build-fonts"
    ],
    "./node_modules/uswds/src/img": [
      "build-img"
    ],
    "./node_modules/uswds/src/js": [
      "build-js"
    ]
  }
}
